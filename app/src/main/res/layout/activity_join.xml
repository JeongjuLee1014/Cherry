<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <ImageView
            android:layout_marginLeft="130dp"
            android:layout_width="144dp"
            android:layout_height="147dp"
            android:background="@drawable/cherry_icon"
            android:gravity="center" />

        <EditText
            android:id="@+id/signup_name"
            android:background="@drawable/id_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="  이름"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/signup_gender"
            android:background="@drawable/id_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="  성별(M or W)"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/signup_location"
            android:background="@drawable/id_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="  촬영지점"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/signup_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/id_input"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="  나이"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/signup_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/id_input"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="  E-mail"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/signup_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="  PASSWORD"
            android:background="@drawable/id_input"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="113dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button6"
                android:layout_width="130dp"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:background="@drawable/backbtn" />

            <ImageView
                android:id="@+id/button7"
                android:layout_width="259dp"
                android:layout_height="83dp"
                android:layout_gravity="center"
                android:background="@drawable/signup_btn" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/ImageArea"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/profile_img" />
</LinearLayout>
